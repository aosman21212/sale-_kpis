<odoo>
    <!-- Form view for sales.kpi model -->
    <record id="view_sales_kpi_form" model="ir.ui.view">
        <field name="name">sales.kpi.form</field>
        <field name="model">sales.kpi</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="total"/>
                        <field name="average_deal_size"/>
                        <field name="required_deals"/>
                    </group>
                    <group>
                        <field name="jan"/>
                        <field name="feb"/>
                        <field name="mar"/>
                        <!-- Add remaining months -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for sales.kpi model -->
    <record id="view_sales_kpi_tree" model="ir.ui.view">
        <field name="name">sales.kpi.tree</field>
        <field name="model">sales.kpi</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="total"/>
                <field name="average_deal_size"/>
                <field name="required_deals"/>
            </tree>
        </field>
    </record>
</odoo>
